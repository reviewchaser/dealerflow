import connectMongo from "@/libs/mongoose";
import CalendarCategory from "@/models/CalendarCategory";

const DEFAULT_CATEGORIES = [
  { name: "Handover", colour: "#22c55e" },
  { name: "Viewing", colour: "#3b82f6" },
  { name: "Delivery", colour: "#8b5cf6" },
  { name: "Warranty", colour: "#f59e0b" },
  { name: "Other", colour: "#6b7280" },
];

export default async function handler(req, res) {
  try {
    await connectMongo();

    if (req.method === "GET") {
      let categories = await CalendarCategory.find().sort({ name: 1 }).lean();

      // If no categories exist, seed with defaults
      if (categories.length === 0) {
        for (const cat of DEFAULT_CATEGORIES) {
          await CalendarCategory.create(cat);
        }
        categories = await CalendarCategory.find().sort({ name: 1 }).lean();
      }

      // Transform _id to id
      const result = categories.map(cat => ({
        id: cat._id.toString(),
        name: cat.name,
        colour: cat.colour,
        createdAt: cat.createdAt,
        updatedAt: cat.updatedAt,
      }));

      return res.status(200).json(result);
    }

    if (req.method === "POST") {
      const { name, colour = "#3b82f6" } = req.body;
      if (!name) return res.status(400).json({ error: "Name required" });

      const category = await CalendarCategory.create({ name, colour });
      return res.status(201).json({
        id: category._id.toString(),
        name: category.name,
        colour: category.colour,
        createdAt: category.createdAt,
        updatedAt: category.updatedAt,
      });
    }

    return res.status(405).json({ error: "Method not allowed" });
  } catch (error) {
    return res.status(500).json({ error: error.message });
  }
}
