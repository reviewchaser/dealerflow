import { useEffect, useState } from "react";
import Head from "next/head";
import DashboardLayout from "@/components/DashboardLayout";
import { toast } from "react-hot-toast";

// Channel icons
const ChannelIcons = {
  email: (
    <svg className="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
    </svg>
  ),
  sms: (
    <svg className="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
    </svg>
  ),
  whatsapp: (
    <svg className="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
      <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
    </svg>
  ),
  qrcode: (
    <svg className="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M12 4v1m6 11h2m-6 0h-2v4m0-11v3m0 0h.01M12 12h4.01M16 20h4M4 12h4m12 0h.01M5 8h2a1 1 0 001-1V5a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1zm12 0h2a1 1 0 001-1V5a1 1 0 00-1-1h-2a1 1 0 00-1 1v2a1 1 0 001 1zM5 20h2a1 1 0 001-1v-2a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1z" />
    </svg>
  ),
};

export default function Reviews() {
  const [reviews, setReviews] = useState([]);
  const [isLoading, setIsLoading] = useState(true);
  const [activeTab, setActiveTab] = useState("email");
  const [dealer, setDealer] = useState(null);

  // Send form state
  const [sendForm, setSendForm] = useState({
    recipientName: "",
    recipientContact: "",
    hasConsent: false,
  });
  const [isSending, setIsSending] = useState(false);

  // Settings state
  const [settings, setSettings] = useState({
    googleReviewUrl: "",
    starThreshold: 4,
    emailTemplate: "Hi {{name}}, thank you for choosing us! We'd love to hear about your experience.",
    smsTemplate: "Hi {{name}}, how was your experience with us? Leave us a review: {{link}}",
  });
  const [isSavingSettings, setIsSavingSettings] = useState(false);

  useEffect(() => {
    fetchData();
  }, []);

  const fetchData = async () => {
    try {
      const [reviewsRes, dealerRes] = await Promise.all([
        fetch("/api/reviews"),
        fetch("/api/dealer"),
      ]);

      if (reviewsRes.ok) {
        const data = await reviewsRes.json();
        setReviews(data);
      }

      if (dealerRes.ok) {
        const dealerData = await dealerRes.json();
        setDealer(dealerData);
        // Load settings from dealer
        if (dealerData.settings?.reviews) {
          setSettings(prev => ({ ...prev, ...dealerData.settings.reviews }));
        }
        if (dealerData.googleReviewUrl) {
          setSettings(prev => ({ ...prev, googleReviewUrl: dealerData.googleReviewUrl }));
        }
      }
    } catch (error) {
      toast.error("Failed to load reviews");
    } finally {
      setIsLoading(false);
    }
  };

  // Calculate stats
  const responses = reviews.filter(r => r.response);
  const avgRating = responses.length > 0
    ? (responses.reduce((sum, r) => sum + r.response.rating, 0) / responses.length).toFixed(1)
    : "N/A";
  const rating5 = responses.filter(r => r.response?.rating === 5).length;
  const rating4 = responses.filter(r => r.response?.rating === 4).length;
  const lowRatings = responses.filter(r => r.response?.rating <= 3).length;
  const publicReviews = responses.filter(r => r.response?.publicReviewSubmitted).length;

  const handleSendReview = async (e) => {
    e.preventDefault();

    if (!sendForm.hasConsent) {
      toast.error("Please confirm you have consent to contact this person");
      return;
    }

    if (!sendForm.recipientName || !sendForm.recipientContact) {
      toast.error("Please fill in all fields");
      return;
    }

    setIsSending(true);
    try {
      const res = await fetch("/api/reviews/send", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({
          channel: activeTab,
          recipientName: sendForm.recipientName,
          recipientContact: sendForm.recipientContact,
        }),
      });

      if (res.ok) {
        toast.success("Review request sent!");
        setSendForm({ recipientName: "", recipientContact: "", hasConsent: false });
        fetchData(); // Refresh list
      } else {
        const data = await res.json();
        throw new Error(data.error || "Failed to send");
      }
    } catch (error) {
      toast.error(error.message || "Failed to send review request");
    } finally {
      setIsSending(false);
    }
  };

  const handleSaveSettings = async () => {
    setIsSavingSettings(true);
    try {
      const res = await fetch("/api/dealer", {
        method: "PUT",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({
          googleReviewUrl: settings.googleReviewUrl,
          settings: {
            ...(dealer?.settings || {}),
            reviews: {
              starThreshold: settings.starThreshold,
              emailTemplate: settings.emailTemplate,
              smsTemplate: settings.smsTemplate,
            }
          }
        }),
      });

      if (res.ok) {
        toast.success("Settings saved");
        const data = await res.json();
        setDealer(data);
      } else {
        throw new Error("Failed to save");
      }
    } catch (error) {
      toast.error("Failed to save settings");
    } finally {
      setIsSavingSettings(false);
    }
  };

  return (
    <DashboardLayout>
      <Head><title>Reviews | DealerFlow</title></Head>

      <div className="mb-8">
        <h1 className="text-3xl font-bold">Reviews & Reputation</h1>
        <p className="text-base-content/60 mt-2">Send review requests and manage your online reputation</p>
      </div>

      {isLoading ? (
        <div className="flex justify-center py-20">
          <span className="loading loading-spinner loading-lg"></span>
        </div>
      ) : (
        <div className="grid grid-cols-1 lg:grid-cols-3 gap-6">
          {/* Main Content - 2 columns */}
          <div className="lg:col-span-2 space-y-6">
            {/* Stats Row */}
            <div className="grid grid-cols-2 md:grid-cols-4 gap-4">
              <div className="card bg-base-200">
                <div className="card-body p-4 text-center">
                  <p className="text-3xl font-bold text-primary">{avgRating}</p>
                  <p className="text-xs text-base-content/60">Avg Rating</p>
                </div>
              </div>
              <div className="card bg-base-200">
                <div className="card-body p-4 text-center">
                  <p className="text-3xl font-bold text-success">{rating5}</p>
                  <p className="text-xs text-base-content/60">5-Star</p>
                </div>
              </div>
              <div className="card bg-base-200">
                <div className="card-body p-4 text-center">
                  <p className="text-3xl font-bold text-warning">{rating4}</p>
                  <p className="text-xs text-base-content/60">4-Star</p>
                </div>
              </div>
              <div className="card bg-base-200">
                <div className="card-body p-4 text-center">
                  <p className="text-3xl font-bold text-emerald-600">{publicReviews}</p>
                  <p className="text-xs text-base-content/60">Google Reviews</p>
                </div>
              </div>
            </div>

            {/* Get Reviews Section */}
            <div className="card bg-white border border-slate-200 shadow-sm">
              <div className="card-body">
                <h2 className="text-lg font-semibold mb-4">Get Reviews</h2>

                {/* Channel Tabs */}
                <div className="flex gap-2 mb-4 flex-wrap">
                  {[
                    { id: "email", label: "Email" },
                    { id: "sms", label: "SMS" },
                    { id: "whatsapp", label: "WhatsApp" },
                    { id: "qrcode", label: "QR Code" },
                  ].map((channel) => (
                    <button
                      key={channel.id}
                      onClick={() => setActiveTab(channel.id)}
                      className={`flex items-center gap-2 px-4 py-2 rounded-lg text-sm font-medium transition-all ${
                        activeTab === channel.id
                          ? "bg-[#0066CC] text-white"
                          : "bg-slate-100 text-slate-600 hover:bg-slate-200"
                      }`}
                    >
                      {ChannelIcons[channel.id]}
                      {channel.label}
                    </button>
                  ))}
                </div>

                {/* Send Form */}
                {activeTab !== "qrcode" ? (
                  <form onSubmit={handleSendReview} className="space-y-4">
                    <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                      <div className="form-control">
                        <label className="label">
                          <span className="label-text font-medium">Recipient Name</span>
                        </label>
                        <input
                          type="text"
                          className="input input-bordered"
                          placeholder="John Smith"
                          value={sendForm.recipientName}
                          onChange={(e) => setSendForm({ ...sendForm, recipientName: e.target.value })}
                        />
                      </div>
                      <div className="form-control">
                        <label className="label">
                          <span className="label-text font-medium">
                            {activeTab === "email" ? "Email Address" : "Phone Number"}
                          </span>
                        </label>
                        <input
                          type={activeTab === "email" ? "email" : "tel"}
                          className="input input-bordered"
                          placeholder={activeTab === "email" ? "john@example.com" : "07123 456789"}
                          value={sendForm.recipientContact}
                          onChange={(e) => setSendForm({ ...sendForm, recipientContact: e.target.value })}
                        />
                      </div>
                    </div>

                    <label className="flex items-center gap-3 cursor-pointer">
                      <input
                        type="checkbox"
                        className="checkbox checkbox-primary checkbox-sm"
                        checked={sendForm.hasConsent}
                        onChange={(e) => setSendForm({ ...sendForm, hasConsent: e.target.checked })}
                      />
                      <span className="text-sm text-slate-600">
                        I have consent to contact this person for review purposes
                      </span>
                    </label>

                    <button
                      type="submit"
                      disabled={isSending || !sendForm.hasConsent}
                      className="btn btn-primary"
                    >
                      {isSending ? (
                        <span className="loading loading-spinner loading-sm"></span>
                      ) : (
                        <>
                          Send Review Request
                          <svg className="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
                          </svg>
                        </>
                      )}
                    </button>
                  </form>
                ) : (
                  /* QR Code Display */
                  <div className="text-center py-8">
                    <div className="inline-block p-4 bg-white border-2 border-slate-200 rounded-xl">
                      <div className="w-48 h-48 bg-slate-100 rounded-lg flex items-center justify-center">
                        <span className="text-slate-400 text-sm">QR Code Preview</span>
                      </div>
                    </div>
                    <p className="mt-4 text-sm text-slate-600">
                      Display this QR code in your showroom for customers to leave reviews
                    </p>
                    <button className="btn btn-outline btn-sm mt-3">
                      Download QR Code
                    </button>
                  </div>
                )}
              </div>
            </div>

            {/* Recent Review Requests */}
            <div className="card bg-white border border-slate-200 shadow-sm">
              <div className="card-body">
                <h2 className="text-lg font-semibold mb-4">Recent Requests</h2>

                {reviews.length === 0 ? (
                  <div className="text-center py-8">
                    <p className="text-slate-500">No review requests yet</p>
                    <p className="text-sm text-slate-400 mt-1">Send your first review request above</p>
                  </div>
                ) : (
                  <div className="overflow-x-auto">
                    <table className="table table-sm">
                      <thead>
                        <tr>
                          <th>Date</th>
                          <th>Customer</th>
                          <th>Channel</th>
                          <th>Status</th>
                          <th>Rating</th>
                        </tr>
                      </thead>
                      <tbody>
                        {reviews.slice(0, 10).map((review) => (
                          <tr key={review.id} className="hover">
                            <td className="text-xs">{new Date(review.sentAt).toLocaleDateString()}</td>
                            <td>{review.contactId?.name || "—"}</td>
                            <td>
                              <span className="inline-flex items-center gap-1 px-2 py-0.5 rounded text-xs font-medium bg-slate-100 text-slate-600">
                                {ChannelIcons[review.channel]}
                                {review.channel}
                              </span>
                            </td>
                            <td>
                              <span className={`inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium ${
                                review.status === "responded" ? "bg-emerald-50 text-emerald-700" :
                                review.status === "opened" ? "bg-blue-50 text-blue-700" :
                                review.status === "expired" ? "bg-red-50 text-red-700" : "bg-amber-50 text-amber-700"
                              }`}>
                                {review.status}
                              </span>
                            </td>
                            <td>
                              {review.response ? (
                                <span className={review.response.rating >= 4 ? "text-emerald-600" : "text-amber-600"}>
                                  {"★".repeat(review.response.rating)}
                                </span>
                              ) : "—"}
                            </td>
                          </tr>
                        ))}
                      </tbody>
                    </table>
                  </div>
                )}
              </div>
            </div>
          </div>

          {/* Settings Sidebar */}
          <div className="space-y-6">
            {/* Settings Card */}
            <div className="card bg-white border border-slate-200 shadow-sm">
              <div className="card-body">
                <h2 className="text-lg font-semibold mb-4">Settings</h2>

                <div className="space-y-4">
                  {/* Google Review URL */}
                  <div className="form-control">
                    <label className="label">
                      <span className="label-text font-medium">Google My Business Review URL</span>
                    </label>
                    <input
                      type="url"
                      className="input input-bordered input-sm"
                      placeholder="https://g.page/r/..."
                      value={settings.googleReviewUrl}
                      onChange={(e) => setSettings({ ...settings, googleReviewUrl: e.target.value })}
                    />
                    <label className="label">
                      <span className="label-text-alt text-slate-400">
                        Open your Google Business Profile → Share review form link
                      </span>
                    </label>
                  </div>

                  {/* Star Threshold */}
                  <div className="form-control">
                    <label className="label">
                      <span className="label-text font-medium">Review Gating Threshold</span>
                    </label>
                    <select
                      className="select select-bordered select-sm"
                      value={settings.starThreshold}
                      onChange={(e) => setSettings({ ...settings, starThreshold: parseInt(e.target.value) })}
                    >
                      <option value={3}>3 stars and above</option>
                      <option value={4}>4 stars and above</option>
                      <option value={5}>5 stars only</option>
                    </select>
                    <label className="label">
                      <span className="label-text-alt text-slate-400">
                        Below this threshold: show private feedback form
                      </span>
                    </label>
                  </div>

                  {/* Email Template */}
                  <div className="form-control">
                    <label className="label">
                      <span className="label-text font-medium">Email Template</span>
                    </label>
                    <textarea
                      className="textarea textarea-bordered text-sm"
                      rows={3}
                      placeholder="Hi {{name}}, thank you for..."
                      value={settings.emailTemplate}
                      onChange={(e) => setSettings({ ...settings, emailTemplate: e.target.value })}
                    />
                  </div>

                  {/* SMS Template */}
                  <div className="form-control">
                    <label className="label">
                      <span className="label-text font-medium">SMS Template</span>
                    </label>
                    <textarea
                      className="textarea textarea-bordered text-sm"
                      rows={2}
                      placeholder="Hi {{name}}, how was..."
                      value={settings.smsTemplate}
                      onChange={(e) => setSettings({ ...settings, smsTemplate: e.target.value })}
                    />
                    <label className="label">
                      <span className="label-text-alt text-slate-400">
                        Use &#123;&#123;name&#125;&#125; and &#123;&#123;link&#125;&#125; placeholders
                      </span>
                    </label>
                  </div>

                  <button
                    onClick={handleSaveSettings}
                    disabled={isSavingSettings}
                    className="btn btn-primary btn-sm w-full"
                  >
                    {isSavingSettings ? (
                      <span className="loading loading-spinner loading-xs"></span>
                    ) : (
                      "Save Settings"
                    )}
                  </button>
                </div>
              </div>
            </div>

            {/* Gating Preview */}
            <div className="card bg-white border border-slate-200 shadow-sm">
              <div className="card-body">
                <h3 className="font-semibold mb-3">Gating Preview</h3>
                <div className="bg-slate-50 rounded-lg p-4 text-center">
                  <p className="text-sm text-slate-600 mb-3">Customer rates: {settings.starThreshold}+ stars</p>
                  <div className="flex items-center justify-center gap-1 mb-3">
                    {[1,2,3,4,5].map(star => (
                      <span key={star} className={`text-2xl ${star <= settings.starThreshold ? "text-amber-400" : "text-slate-200"}`}>
                        ★
                      </span>
                    ))}
                  </div>
                  <div className="divider text-xs text-slate-400">then shows</div>
                  <button className="btn btn-sm bg-white border-slate-200 shadow-sm gap-2">
                    <svg className="w-4 h-4 text-[#4285f4]" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12.545,10.239v3.821h5.445c-0.712,2.315-2.647,3.972-5.445,3.972c-3.332,0-6.033-2.701-6.033-6.032s2.701-6.032,6.033-6.032c1.498,0,2.866,0.549,3.921,1.453l2.814-2.814C17.503,2.988,15.139,2,12.545,2C7.021,2,2.543,6.477,2.543,12s4.478,10,10.002,10c8.396,0,10.249-7.85,9.426-11.748L12.545,10.239z"/>
                    </svg>
                    Leave a Google Review
                  </button>
                </div>

                <div className="mt-4 bg-slate-50 rounded-lg p-4 text-center">
                  <p className="text-sm text-slate-600 mb-3">Customer rates: Below {settings.starThreshold} stars</p>
                  <div className="flex items-center justify-center gap-1 mb-3">
                    {[1,2,3,4,5].map(star => (
                      <span key={star} className={`text-2xl ${star < settings.starThreshold ? "text-amber-400" : "text-slate-200"}`}>
                        ★
                      </span>
                    ))}
                  </div>
                  <div className="divider text-xs text-slate-400">then shows</div>
                  <div className="bg-white border border-slate-200 rounded-lg p-3">
                    <p className="text-sm font-medium text-slate-700 mb-2">Share your feedback</p>
                    <div className="h-16 bg-slate-100 rounded border border-slate-200 mb-2"></div>
                    <button className="btn btn-xs btn-primary">Submit Feedback</button>
                  </div>
                  <p className="text-[10px] text-slate-400 mt-2">Google review link shown smaller below</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      )}
    </DashboardLayout>
  );
}
