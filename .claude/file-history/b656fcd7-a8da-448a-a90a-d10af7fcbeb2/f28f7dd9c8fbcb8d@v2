/**
 * Tenant Warranty/Aftersales Page - /app/[dealerSlug]/warranty
 */

import { useEffect, useState } from "react";
import Head from "next/head";
import { TenantPage, withTenantProps } from "@/components/TenantPage";
import { useDealer } from "@/contexts/DealerContext";

// Inner component that uses context
function WarrantyContent({ dealer }) {
  const { fetchWithTenant } = useDealer();
  const [cases, setCases] = useState([]);
  const [isLoading, setIsLoading] = useState(true);

  useEffect(() => {
    fetchWithTenant("/api/aftercare")
      .then(res => res.ok ? res.json() : [])
      .then(data => setCases(Array.isArray(data) ? data : []))
      .finally(() => setIsLoading(false));
  }, [fetchWithTenant]);

  return (
    <>
      <Head><title>Warranty | {dealer?.name || 'DealerFlow'}</title></Head>

      <div className="mb-6">
        <h1 className="text-2xl font-bold text-slate-900">Aftersales & Warranty</h1>
        <p className="text-slate-600 mt-1">Manage warranty cases and aftersales</p>
      </div>

      {isLoading ? (
        <div className="flex justify-center py-20">
          <div className="w-12 h-12 border-4 border-[#0066CC]/20 border-t-[#0066CC] rounded-full animate-spin" />
        </div>
      ) : cases.length === 0 ? (
        <div className="text-center py-20 bg-white rounded-2xl border border-slate-100">
          <div className="w-16 h-16 bg-slate-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg className="w-8 h-8 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={1.5} d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 className="text-lg font-semibold text-slate-900 mb-2">No warranty cases</h3>
          <p className="text-slate-500">All clear - no active warranty cases</p>
        </div>
      ) : (
        <div className="bg-white rounded-2xl border border-slate-100 overflow-hidden">
          <div className="divide-y divide-slate-100">
            {cases.map((c) => (
              <div key={c.id || c._id} className="p-4 hover:bg-slate-50 transition-colors">
                <div className="flex items-center justify-between">
                  <div>
                    <p className="font-semibold text-slate-900">{c.vehicleReg || c.vehicle?.regCurrent}</p>
                    <p className="text-sm text-slate-500">{c.issueDescription || c.description}</p>
                  </div>
                  <span className={`px-3 py-1 rounded-full text-xs font-semibold ${
                    c.status === "closed" ? "bg-slate-100 text-slate-600" :
                    c.status === "in_progress" ? "bg-amber-100 text-amber-700" :
                    "bg-blue-100 text-blue-700"
                  }`}>
                    {c.status}
                  </span>
                </div>
              </div>
            ))}
          </div>
        </div>
      )}
    </>
  );
}

export default function TenantWarranty({ dealer, dealerSlug, error }) {
  return (
    <TenantPage dealer={dealer} dealerSlug={dealerSlug} error={error}>
      <WarrantyContent dealer={dealer} />
    </TenantPage>
  );
}

export const getServerSideProps = withTenantProps();
