/**
 * TenantPage - Wrapper for tenant-aware pages
 *
 * Provides:
 * - DealerContext with dealer data
 * - Server-side tenant validation via getServerSideProps helper
 * - Error handling for access denied
 */

import { useRouter } from 'next/router';
import { DealerProvider } from '@/contexts/DealerContext';
import DashboardLayout from '@/components/DashboardLayout';
import { getTenantFromSlug } from '@/libs/tenant';
import connectMongo from '@/libs/mongoose';

/**
 * TenantPage wrapper component
 */
export function TenantPage({ children, dealer, dealerSlug, error }) {
  const router = useRouter();

  if (error) {
    return (
      <div className="min-h-screen flex items-center justify-center bg-slate-50">
        <div className="text-center max-w-md px-6">
          <div className="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg className="w-8 h-8 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
          </div>
          <h1 className="text-2xl font-bold text-slate-900 mb-2">Access Denied</h1>
          <p className="text-slate-600 mb-6">{error}</p>
          <button
            onClick={() => router.push('/dashboard')}
            className="px-6 py-3 bg-[#0066CC] text-white rounded-xl hover:bg-[#0055BB] transition-colors font-semibold"
          >
            Go to Dashboard
          </button>
        </div>
      </div>
    );
  }

  return (
    <DealerProvider initialDealer={dealer} initialSlug={dealerSlug}>
      <DashboardLayout dealerSlug={dealerSlug} dealer={dealer}>
        {children}
      </DashboardLayout>
    </DealerProvider>
  );
}

/**
 * Helper for getServerSideProps in tenant pages
 *
 * Usage:
 * export const getServerSideProps = withTenantProps(async (context, tenant) => {
 *   // tenant contains { dealer, dealerId, dealerSlug, userId, role }
 *   return { props: { customData: 'value' } };
 * });
 */
export function withTenantProps(handler) {
  return async (context) => {
    const { dealerSlug } = context.params || {};
    const { req, res } = context;

    if (!dealerSlug) {
      return {
        redirect: {
          destination: '/dashboard',
          permanent: false,
        },
      };
    }

    try {
      await connectMongo();
      const tenantCtx = await getTenantFromSlug(req, res, dealerSlug);

      // Serialize dealer data
      const dealer = {
        id: tenantCtx.dealer._id.toString(),
        name: tenantCtx.dealer.name,
        slug: tenantCtx.dealer.slug,
        logoUrl: tenantCtx.dealer.logoUrl || null,
      };

      // Call the handler with tenant context
      let additionalProps = {};
      if (handler) {
        const result = await handler(context, {
          ...tenantCtx,
          dealer,
          dealerSlug,
        });
        if (result?.redirect) return result;
        if (result?.notFound) return result;
        additionalProps = result?.props || {};
      }

      return {
        props: {
          dealerSlug,
          dealer,
          error: null,
          ...additionalProps,
        },
      };
    } catch (error) {
      console.error('[withTenantProps] Error:', error.message);

      // Redirect to login if unauthorized
      if (error.code === 'UNAUTHORIZED') {
        return {
          redirect: {
            destination: `/auth/signin?callbackUrl=/app/${dealerSlug}`,
            permanent: false,
          },
        };
      }

      // Show error page for other errors
      return {
        props: {
          dealerSlug,
          dealer: null,
          error: error.message || 'Access denied',
        },
      };
    }
  };
}

export default TenantPage;
